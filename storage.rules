rules_version = '2';

// Cabzi Storage Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all access to files
    match /{allPaths=**} {
      // Allow read access to any authenticated user.
      // This is generally safe for public assets like profile pictures.
      allow read: if request.auth != null;

      // Allow write access (create, update, delete) only if:
      // 1. The user is authenticated.
      // 2. The uploaded file is an image.
      // 3. The file size is less than 5MB to prevent abuse.
      allow write: if request.auth != null
                   && request.resource.contentType.matches('image/.*')
                   && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
